{% import 'vars.njk' as vars %}

<header class="absolute inset-x-0 z-10 max-lg:py-5">
  <div class="container flex items-center justify-between">
    <a href="" class="block">
      <picture class="block h-11 w-28 md:h-11 md:w-36"> <img src="{% static './images/logo.svg' %}" class="block h-full w-full" alt="" /> </picture>
    </a>
    <nav class="text-white max-lg:hidden">
      <ul class="flex gap-10 border-b border-gray-50">
        {% for item in vars.menu %}
        <li class="{% if loop.index == 1 %}active{% endif %} flex py-8 [&.active]:border-b [&.active]:border-white">
          <a href="{{ item.url }}" class="block"> {{ item.title }} </a>
        </li>
        {% endfor %}
      </ul>
    </nav>
    <div class="flex gap-2">
      <div class="relative flex flex-col text-white" x-data="{ dropdown : false}" x-on:click.outside="dropdown = false">
        <button class="flex items-center gap-1 border border-gray-50 px-4 py-2" x-on:click="dropdown = ! dropdown">
          <span>En</span>
          <svg width="6" height="10">
            <use xlink:href="./assets/sprite.svg#arrow-d_sprite"></use>
          </svg>
        </button>
        <div x-show="dropdown" class="absolute top-full w-full border border-gray-50 text-black">
          <ul class="flex flex-col">
            <li class="bg-white hover:bg-red hover:text-white">
              <a href="" class="block px-3 py-2">En</a>
            </li>
            <li class="bg-white hover:bg-red hover:text-white">
              <a href="" class="block px-3 py-2">De</a>
            </li>
          </ul>
        </div>
      </div>
      <a href="" class="btn btn--red"> Kontaktieren </a>
      <button class="lg:hidden" x-on:click="menuOpen = true">
        <svg width="40" height="10">
          <use xlink:href="./assets/sprite.svg#menu_sprite"></use>
        </svg>
      </button>
    </div>
  </div>
</header>

<div class="fixed left-0 top-0 z-50 h-full w-full bg-black" x-show="menuOpen" x-transition>
  <div class="container flex items-center justify-between border-b border-[#383945] py-5">
    <a href="" class="block">
      <picture class="block h-11 w-28 md:h-11 md:w-36"> <img src="{% static './images/logo.svg' %}" class="block h-full w-full" alt="" /> </picture>
    </a>
    <button x-on:click="menuOpen = false">
      <svg width="18" height="18">
        <use xlink:href="./assets/sprite.svg#close_sprite"></use>
      </svg>
    </button>
  </div>
  <div class="mt-16 flex flex-col">
    <nav>
      <ul class="flex flex-col">
        <li class="active to-transparent container from-red py-6 text-white-50 [&.active]:bg-gradient-to-r [&.active]:text-white">
          <a href="">Startseite</a>
        </li>
        <li class="container py-6 text-white-50">
          <a href="">Unsere Unternehmen</a>
        </li>
        <li class="container py-6 text-white-50">
          <a href="">Karriere</a>
        </li>
        <li class="container py-6 text-white-50">
          <a href="">Kontact</a>
        </li>
      </ul>
    </nav>
  </div>
  <div class="container mt-11">
    <button class="btn btn--red text-sm w-full py-4 font-medium">Kontaktieren</button>
  </div>
  <div class="container mt-14 flex justify-between items-center">
    <div class="flex gap-5">
      <a href="" class="block h-8 w-8">
        <img src="{% static './images/inst.svg' %}" class="h-full w-full" alt="" />
      </a>
      <a href="" class="block h-8 w-8">
        <img src="{% static './images/fb.svg' %}" class="h-full w-full" alt="" />
      </a>
    </div>
    <div class="relative flex flex-col text-white" x-data="{ dropdown : false}" x-on:click.outside="dropdown = false">
      <button class="flex items-center gap-1 border border-gray-50 px-4 py-2" x-on:click="dropdown = ! dropdown">
        <span>En</span>
        <svg width="6" height="10">
          <use xlink:href="./assets/sprite.svg#arrow-d_sprite"></use>
        </svg>
      </button>
      <div x-show="dropdown" class="absolute top-full w-full border border-gray-50 text-black">
        <ul class="flex flex-col">
          <li class="bg-white hover:bg-red hover:text-white">
            <a href="" class="block px-3 py-2">En</a>
          </li>
          <li class="bg-white hover:bg-red hover:text-white">
            <a href="" class="block px-3 py-2">De</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container flex justify-between mt-8">
    <p class="text-white-50 text-xs">
      All rights reserved 2022 IMO Group
    </p>
    <ul class="flex gap-3">
      <li class="text-white-50 text-xs">
        <a href="">Imprint</a>
      </li>
      <li class="text-white-50 text-xs">
        <a href="">Privacy Policy</a>
      </li>
    </ul>

  </div>
</div>
